.field
  position: relative;
  display flex;
  flex-direction: column;
  justify-content center;
  margin: 3em auto;
  padding: 0.5em;
  border: 1px solid #ccc;
  border-radius: 0.5em;
  width: 50%;
  box-sizing border-box;

@media(max-width: 450px){
  .field {
    width: 100%;
  }
}

.field__container
  position: relative;
  padding-right: 1em;
  font-size: 16px;

.field--upward.field--list-visible
  border-top-right-radius: 0;
  border-top-left-radius: 0;

.field--downward.field--list-visible
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;

.field__container::after
  position: absolute;
  top: 50%;
  right: 1em;
  content: '';
  border-left: 0.5em solid transparent;
  border-right: 0.5em solid transparent;

.field--upward .field__container::after
  border-bottom: 0.5em solid black;

.field--downward .field__container::after
  border-top: 0.5em solid black;

.field__input
  box-sizing: border-box;
  border: none;
  background: none;
  width: 100%;
  padding: 1.2em 1em 0.8em;
  position: relative;
  z-index: 2;
  font-size: 1em;

.field__input:focus
  outline: none;

.field__placeholder
  box-sizing: border-box;
  border: none;
  background: none;
  height: 0.9em;
  background-color: white;
  position: absolute;
  z-index: 1;
  padding: 0 0.5em;
  left: 1em;
  top: 50%;
  line-height: 1em;
  margin-top: -0.5em;
  color: #777;
  transition: all 0.2s ease;

.field__placeholder--float
  font-size: 1em;
  top: -0.5em;

.field__suggestions
  position: absolute;
  left: -1px;
  right: -1px;
  margin: 0;
  padding: 0;
  visibility: hidden;
  border: 1px solid #ccc;
  border-radius: 0.5em;
  box-sizing: border-box;

.field__suggestions--visible
  visibility: visible;

.field__suggestion
  list-style: none;
  padding: 1em;

.field__suggestion:hover,
.field__suggestion:focus
  background-color: #ccc;

.field__message
  position: absolute;
  display: none;
  left: -1px;
  right: -1px;
  margin: 0;
  padding: 1em;
  border: 1px solid #ccc;
  border-radius: 0.5em;
  box-sizing: border-box;

.field__message--visible
  display: block;

.field--upward .field__suggestions,
.field--upward .field__message
  bottom: 4.2em;
  border-bottom: none;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;

.field--downward .field__suggestions,
.field--downward .field__message
  top: 4.2em;
  border-top: none;
  border-top-right-radius: 0;
  border-top-left-radius: 0;

strong
  text-decoration: underline;
  color: darkorange;
